<% form_for @author do |f| %>
  <%= error_messages_for "author" %>
  
  <div class="section block narrow">
    <%= f.label "Author name" %>
    <%= f.text_field :name, :class => "text" %>
  </div>
  
  <div class="section block wide">
    <%= f.label "Notes" %>
    <%= f.text_area :note, :rows => 8, :class => "text" %>
  </div>
  
  <%= f.submit %>
<% end %>
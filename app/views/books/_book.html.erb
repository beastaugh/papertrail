<% editable_content_wrapper :type => "book" do %>
	<h2 class="title"><%= book_page_link(book) %></h2>

	<p class="about clear"><%= edit_link(book) %> By <%= author_page_link(book.author) %>, finished <%= h(nice_date(book.created_at)) %></p>

	<%= content_tag :div, sanitize(smartypants(markdown(book.comment))), :class => "comment" unless book.comment.blank? %>
<% end %>
